
<div class="row">

	<!-- profile -->
	<div class="col-md-2">
    <h3><%= @user.name %></h3>
    <%= gravatar_tag @user.email, size: 150 %>
	</div>

	<!-- places -->
	<div class="col-md-5">
    <h3>My places</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Created</th>
          <th><!-- actions --></th>
        </tr>
      </thead>
      <tbody>
        <% @places.each { |place| %>
          <tr>
            <td><%= place.name %></td>
            <td><%= time_ago_in_words(place.created_at) %></td>
            <td><%= link_to 'Edit', edit_place_path(place) %> | <%= link_to 'Delete', place_path(place), method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
        <% } %>
      </tbody>
	</div>

	<!-- reviews -->
	<div class="col-md-5">
		<h3>My Reviews</h3>
		<table class="table">
			<thead>
				<tr>
					<th>Place</th>
					<th>When</th>
					<th>Rating</th>
					<th> <!-- actions --> </th>
				</tr>
			</thead>
			<tbody>
				<% @reviews.each do |review| %>
				  <tr>
					<td><%= review.place.name %></td>
					<td><%= time_ago_in_words(review.created_at) %> ago </td>
					<td class="score_<%= review.id %> "></td>
					<td><%= link_to "edit", edit_review_path(review) %> | <%= link_to "delete", review_path(review), method: :delete %></td>
				  </tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<tbody>
<% @reviews.each do |review| %>
	<tr>
	<td><%= review.place.name %></td>
	<td><%= time_ago_in_words(review.created_at) %> ago </td>
	<td class="score_<%= review.id %> "></td>
	<td><%= link_to "edit", edit_review_path(review) %> | <%= link_to "delete", review_path(review), method: :delete %></td>
	</tr>
<% end %>
</tbody>
